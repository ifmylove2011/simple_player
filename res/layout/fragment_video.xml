<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xter.player.fragment.VideoFragment" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/tv_local_video"
        android:textSize="@dimen/text_18" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_local_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/lv_local_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.xter.player.view.CustomVolumControlBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        zhy:bg="@drawable/img_player_center"
        zhy:circleWidth="10dp"
        zhy:dotCount="8"
        zhy:firstColor="#ADC6E5"
        zhy:secondColor="#0362DB"
        zhy:splitSize="25" />

</LinearLayout>