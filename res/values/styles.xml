    <style name="LoadingProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/loading_progress_rotate</item>
        <item name="android:indeterminateDuration">500</item>
    </style>
</resources>
